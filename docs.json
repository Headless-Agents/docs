{
  "$schema": "https://mintlify.com/schema.json",
  "name": "Headless Agents",
  "logo": {
    "dark": "/logo/dark.svg",
    "light": "/logo/light.svg"
  },
  "favicon": "/favicon.svg",
  "theme": "willow",
  "colors": {
    "primary": "#0D9373",
    "light": "#07C983",
    "dark": "#0D9373"
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "mailto:support@headlessagents.ai"
    }
  ],
  "topbarCtaButton": {
    "name": "Dashboard",
    "url": "https://dashboard.headlessagents.ai"
  },
  "api": {
    "mdx": {
      "server": "https://api.headlessagents.ai",
      "auth": {
        "method": "key",
        "name": "X-API-Key"
      }
    }
  },
  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    }
  ],
  "anchors": [
    {
      "name": "Documentation",
      "icon": "book-open-cover",
      "url": "https://headlessagents.ai/docs"
    },
    {
      "name": "Community",
      "icon": "slack",
      "url": "https://headlessagents.ai/community"
    }
  ],
  "navigation": {
    "get-started": {
      "name": "Get Started",
      "pages": ["introduction", "quickstart", "development"]
    },
    "api-reference": {
      "name": "API Reference",
      "pages": ["api-reference/introduction", "api-reference/authentication"]
    },
    "endpoints": {
      "name": "Endpoints",
      "pages": [
        "api-reference/endpoints/health",
        "api-reference/endpoints/call-agent",
        "api-reference/endpoints/agent-stats"
      ]
    }
  },
  "footerSocials": {
    "github": "https://github.com/headlessagents"
  }
}
